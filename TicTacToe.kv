<Symbol@Widget>:
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    canvas:
        Color:
            rgba: 1,1,1, 1

<MenuScreen>:
    canvas:
        Color:
            rgba: 0,180/255,180/255,1
        Rectangle:
            size: self.size

    BoxLayout:
        orientation: "vertical"
        spacing: 15
        padding:15
        canvas:
            Color:
                rgba: 0,180/255,180/255,1
            Rectangle:
                size: self.size

        Image:
            source: 'assets/title.jpg'

        Button:
            size_hint: 1, 0.15
            background_normal: ''
            background_color: 0,0.9,0.9,1
            text: "Play"
            on_release: app.new_game(True)
        Button:
            size_hint: 1, 0.15
            text: "Play with AI"
            on_release: app.new_game(False)

<PlayerChooser@Popup>:
    id: chooser
    size_hint: 0.55,0.25
    title: ""
    separator_height: 0

    RelativeLayout:

        Label:
            text: "Choose Player"
            pos_hint: {'top': 0}

        Button:
            size_hint: 0.48, 1
            pos_hint: {'x':0,'y':0}
            name: "X"
            id:  x_btn
            on_press: root.close("X")
            background_normal: ''
            background_color: 0,0.9,0.9,1

            canvas:
                Color:
                    rgba: 1,1,1,1
                Line:
                    width: 5
                    points: 20, self.height-20, self.width-20, 20
                Line:
                    width: 5
                    points: self.width-20, self.height-20, 20, 20


        Button:
            size_hint: 0.48, 1
            pos_hint: {'right': 1}
            id:  o_btn
            name: "O"
            on_press: root.close("O")

            background_normal: ''
            background_color: 0,0.9,0.9,1

            canvas:
                Color:
                    rgba: 1,1,1,1
                Line:
                    width: 5
                    circle:
                        (self.center_x,self.center_y, (self.x-20)*0.45)

<GridEntry>:
    size_hint: 1,1
    pos_hint: None, None

    canvas:
        Color:
            rgba: 0,210/255,210/255,1
        Rectangle:
            size: self.size
            pos: 0,0

    Symbol:
        id: container

    FloatLayout:
        id: overlay
        size_hint:1,1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        opacity: 0
        canvas:
            Color:
                rgba: 0,150/255,150/255,1
            Rectangle:
                size: self.size



<TicTacToe>:
    orientation: "vertical"

    BoxLayout:
        id: row1
        size_hint: 1, 0.25
        Label:
            id: champ

    RelativeLayout:
        size_hint: 1,1


        GridLayout:
            id: playboard
            pos_hint: {'x':0, 'y': 0}
            cols: 3
            spacing: 7
            padding: 7
            canvas:
                Color:
                    rgba: 0,180/255,180/255,1
                Rectangle:
                    size: self.size
                    pos: 0,0

        FloatLayout:
            id: bg
            pos_hint: {'x':0, 'y': 0}
            canvas:
                Color:
                    rgba: 0,210/255,210/255,1
                Line:
                    points: [0, 0, self.size[0], 0,self.size[0], self.size[1], 0, self.size[1], 0,0]
                    width: 7

        FloatLayout:
            id: lineboard
            pos_hint: {'x':0, 'y': 0}
            canvas:
                Color:
                    rgb: 1,1,1

    BoxLayout:
        id: button_area
        size_hint: 1, 0.25
        Button:
            text: "Play again"
            on_release: app.new_game(root.human)
        Button:
            text: "Back"
            on_release: root.parent.manager.current = "Menu"